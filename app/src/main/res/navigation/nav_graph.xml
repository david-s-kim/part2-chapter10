<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.part2_chapter10.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_writeArticleFragment"
            app:destination="@id/writeArticleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.part2_chapter10.AuthFragment"
        tools:layout="@layout/fragment_auth"
        android:label="AuthFragment" />
    <fragment
        android:id="@+id/writeArticleFragment"
        android:name="com.example.part2_chapter10.ui.article.WriteArticleFragment"
        tools:layout="@layout/fragment_write"
        android:label="WriteArticleFragment" >
        <action
            android:id="@+id/action_writeArticleFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/actionBack"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

</navigation>